    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js" integrity="sha512-3j3VU6WC5rPQB4Ld1jnLV7Kd5xr+cq9avvhwqzbH/taCRNURoeEpoPBK9pDyeukwSxwRPJ8fDgvYXd6SkaZ2TA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    
    <script>

        $( document ).ready(function() {
          var ammount = $.cookie("ammount");
          var odeme_yontemi;
          $('.ammount').text( "$"+ammount);
          $('.ammount_button').text( "Pay $"+ammount);
          $('.totolAmmount').text( "$"+parseInt(ammount)+1.99);
          $(".btn-check").click(function(){
            odeme_yontemi = $( "[name=btnradio]:checked" ).val();
            $.cookie( "odeme_yontemi" , odeme_yontemi , { expires: 15 });
          });
          
          $(".ammount_button").click(function(){
              console.log(ammount);
              var address = $("[name=address]").val();
              console.log(address); 
              console.log(odeme_yontemi);
              
              $.cookie( "address" , address , { expires: 15 });
              //window.location.href = "http://127.0.0.1:8000/payment_success";
          }); 
            
        });
    </script>
{% endblock %}